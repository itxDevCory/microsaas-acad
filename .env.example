# MicroSaaS Academy AI - Environment Variables
# Copy this file to .env.local and fill in your keys

# ============================================
# AI Models (choose based on your mode)
# ============================================

# OpenAI (for online/hybrid mode)
OPENAI_API_KEY=sk-your-key-here

# Anthropic Claude (optional, for advanced reasoning)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# ============================================
# Monetization & Payments
# ============================================

# Stripe (for payment processing in generated projects)
STRIPE_SECRET_KEY=sk_test_your-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-key-here

# ============================================
# Database (for production deployment)
# ============================================

# PostgreSQL (optional, defaults to SQLite locally)
DATABASE_URL=postgresql://user:password@localhost:5432/microsaas_academy

# ============================================
# Authentication (for multi-user deployment)
# ============================================

NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-a-random-secret-here

# ============================================
# Analytics (optional)
# ============================================

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-id-here

# ============================================
# Email (for notifications and marketing)
# ============================================

# Resend
RESEND_API_KEY=re_your-key-here

# ============================================
# Deployment
# ============================================

# Vercel (auto-detected)
# VERCEL_URL=auto

# Custom domain
# NEXT_PUBLIC_APP_URL=https://yourdomain.com

# ============================================
# Feature Flags
# ============================================

# Enable experimental features
NEXT_PUBLIC_ENABLE_EXPERIMENTAL=false

# Enable offline mode
NEXT_PUBLIC_OFFLINE_MODE=true

# Enable multi-agent collaboration
NEXT_PUBLIC_MULTI_AGENT=true

# ============================================
# Development
# ============================================

# Debug mode
DEBUG=false

# Log level (error | warn | info | debug)
LOG_LEVEL=info
